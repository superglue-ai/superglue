{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend",
      "rules": [
        {
          "id": "@secretlint/secretlint-rule-database-connection-string",
          "options": {
            "allows": [
              "postgres://<<user>>:<<password>>@<<hostname>>:<<port>>",
              "postgres://<<username>>:<<password>>@<<host>>:<<port>>/<<database>>",
              "ftp://testuser:testpass@127.0.0.1:2121",
              "postgres://testuser:testpass@localhost:5432/testdb",
              "postgres://user2:pass2@host2/db2"
            ]
          }
        },
        {
          "id": "@secretlint/secretlint-rule-basicauth",
          "options": {
            "allows": ["ftp://testuser:testpass"]
          }
        }
      ]
    }
  ]
}

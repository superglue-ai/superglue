---
// Custom SocialIcons component that adds header buttons and theme toggle after the default social icons
import Default from '@astrojs/starlight/components/SocialIcons.astro';
---

<Default {...Astro.props} />

<div class="header-actions">
  <a href="https://app.superglue.cloud" class="try-now-link" target="_blank" rel="noopener">Try Now</a>
  <a href="https://cal.com/superglue/superglue-demo" class="talk-to-us-link" target="_blank" rel="noopener">Talk to us</a>
  <starlight-theme-toggle>
    <button type="button" class="theme-toggle" aria-label="Toggle dark mode">
      <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
      </svg>
      <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
      </svg>
    </button>
  </starlight-theme-toggle>
</div>

<style>
  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-left: 1rem;
  }

  .header-actions a {
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    white-space: nowrap;
  }

  .try-now-link {
    color: var(--sl-color-text);
  }

  .try-now-link:hover {
    color: var(--sl-color-accent);
  }

  .talk-to-us-link {
    background: linear-gradient(to bottom right, rgba(247, 248, 250, 0.5), rgba(247, 248, 250, 0.3));
    backdrop-filter: blur(4px);
    color: #191c20;
    padding: 0.5rem 1rem;
    border-radius: 0.75rem;
    border: 1px solid rgba(229, 231, 235, 0.5);
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    transition: all 0.2s;
  }

  .talk-to-us-link:hover {
    background: linear-gradient(to bottom right, rgba(247, 248, 250, 0.6), rgba(247, 248, 250, 0.4));
    border-color: rgba(229, 231, 235, 0.6);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  :global([data-theme='dark']) .talk-to-us-link {
    background: linear-gradient(to bottom right, rgba(36, 36, 36, 0.5), rgba(36, 36, 36, 0.3));
    color: #ffffff;
    border: 1px solid rgba(64, 64, 64, 0.7);
  }

  :global([data-theme='dark']) .talk-to-us-link:hover {
    background: linear-gradient(to bottom right, rgba(36, 36, 36, 0.6), rgba(36, 36, 36, 0.4));
    border-color: rgba(64, 64, 64, 0.9);
  }

  /* Theme toggle button */
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    padding: 0;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    background: transparent;
    color: var(--sl-color-gray-1);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .theme-toggle:hover {
    border-color: var(--sl-color-accent);
    color: var(--sl-color-accent);
  }

  /* Show sun in dark mode, moon in light mode */
  .sun-icon {
    display: none;
  }
  .moon-icon {
    display: block;
  }

  :global([data-theme='dark']) .sun-icon {
    display: block;
  }
  :global([data-theme='dark']) .moon-icon {
    display: none;
  }

  /* Hide on mobile */
  @media (max-width: 50rem) {
    .header-actions {
      display: none;
    }
  }
</style>

<script>
  class StarlightThemeToggle extends HTMLElement {
    constructor() {
      super();
      const button = this.querySelector('button');
      
      button?.addEventListener('click', () => {
        const currentTheme = document.documentElement.dataset.theme;
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        if (typeof localStorage !== 'undefined') {
          localStorage.setItem('starlight-theme', newTheme);
        }
        
        window.location.reload();
      });
    }
  }

  customElements.define('starlight-theme-toggle', StarlightThemeToggle);
  
  // Make social icons open in new tab
  document.querySelectorAll('.social-icons a').forEach(link => {
    link.setAttribute('target', '_blank');
    link.setAttribute('rel', 'noopener');
  });
</script>

<style>
  .site-footer {
    background: #0a0a0a;
    color: #ffffff;
    padding: 4rem 2rem 2rem;
    margin-top: 4rem;
  }

  .footer-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
  }

  /* Left column */
  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .footer-logo-link {
    display: inline-block;
  }

  .footer-logo {
    height: 2rem;
    width: auto;
  }

  .footer-logo .logo-bg {
    fill: #0a0a0a;
    stroke: #ffffff;
    stroke-width: 208.33px;
  }

  .footer-logo .logo-text {
    fill: #ffffff;
  }

  .footer-legal {
    font-size: 0.75rem;
    line-height: 1.6;
  }

  .legal-heading {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #ffffff;
  }

  .legal-text {
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .footer-bottom {
    margin-top: auto;
  }

  .copyright {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 0.75rem;
  }

  .legal-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .legal-links a {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.2s;
  }

  .legal-links a:hover {
    color: #ffffff;
  }

  /* Right column */
  .footer-right {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .footer-cta {
    max-width: 400px;
  }

  .footer-heading {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 0.75rem;
    line-height: 1.2;
  }

  .footer-subtext {
    color: rgba(255, 255, 255, 0.7);
    margin: 0 0 1.5rem;
    font-size: 0.9375rem;
  }

  .footer-cta-button {
    display: inline-block;
    background: #ffffff;
    color: #0a0a0a;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .footer-cta-button:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-1px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-wrapper {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-right {
      order: -1;
    }

    .footer-heading {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .site-footer {
      padding: 3rem 1.5rem 1.5rem;
    }

    .legal-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>

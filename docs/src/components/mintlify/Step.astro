---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="mintlify-step flex gap-4 mb-6 relative">
  <div class="shrink-0 w-8 h-8 rounded-full bg-[#191c20] dark:bg-white text-white dark:text-[#191c20] flex items-center justify-center font-semibold text-sm z-10 before:content-[counter(step-counter)]"></div>
  <div class="flex-1 min-w-0 -mt-1">
    {title && <h3 class="m-0 mb-1 text-base font-semibold text-[#191c20] dark:text-white leading-8">{title}</h3>}
    <div class="text-[#555555] dark:text-[#999999] leading-relaxed [&>p:first-child]:mt-0 [&>p:last-child]:mb-0">
      <slot />
    </div>
  </div>
</div>

<style>
  /* Step connector line */
  .mintlify-step:not(:last-child)::after {
    content: '';
    position: absolute;
    width: 2px;
    background: #e5e7eb;
    left: 0.9375rem;
    top: 2.25rem;
    bottom: -1.5rem;
  }
  
  :global([data-theme='dark']) .mintlify-step:not(:last-child)::after {
    background: #404040;
  }
</style>

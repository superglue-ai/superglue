---
// Re-export Starlight's built-in TabItem component
import { TabItem } from '@astrojs/starlight/components';

interface Props {
  title?: string;
  label?: string;
}

const { title, label } = Astro.props;
// Mintlify uses "title", Starlight uses "label"
const tabLabel = label || title || 'Tab';
---

<TabItem label={tabLabel}>
  <slot />
</TabItem>

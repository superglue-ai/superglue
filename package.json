{
  "name": "superglue",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@11.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:unit": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:integration": "cd packages/core && npm run build && npm run test:integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "generate-ranking": "tsc && node --max-old-space-size=12288 --expose-gc dist/eval/api-ranking/generate-api-ranking.js"
  },
  "dependencies": {
    "@playwright/test": "^1.50.1",
    "@superglue/client": "^2.3.52",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^20.17.19",
    "mcp-remote": "^0.1.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
{
  "name": "superglue",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/shared",
    "packages/web"
  ],
  "packageManager": "npm@11.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:unit": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:evals": "npx tsx eval/tool-evals/index.ts",
    "test:integration-evals": "npx tsx eval/integration-evals/index.ts",
    "test:sdk": "cd eval/sdk-test && npm install && node run-with-server.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "npx prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md,mdx}\" --ignore-path .gitignore",
    "lint:fix": "npx prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md,mdx}\" --ignore-path .gitignore",
    "clean": "turbo run clean",
    "generate-ranking": "tsc && node --max-old-space-size=12288 --expose-gc dist/eval/api-ranking/generate-api-ranking.js"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "ssh2-sftp-client": "^12.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@types/node": "^20.17.19",
    "lefthook": "^2.0.3",
    "mcp-remote": "^0.1.5",
    "prettier": "3.7.4",
    "secretlint": "^11.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "printWidth": 100
  }
}
